{
  "name": "referalytics",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon -w src/server -x tsx src/index.ts",
    "start": "NODE_ENV=production tsx src/index.ts",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier **/*.ts **/*.css --write",
    "lint": "eslint --fix"
  },
  "dependencies": {
    "@netlify/functions": "^2.6.0",
    "@types/express": "^4.17.15",
    "@types/node": "^20.9.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "lowdb": "^7.0.1",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "eslint": "^9.1.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "tsx": "^4.5.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^7.7.1",
    "vite": "^5.2.0",
    "vite-express": "*"
  },
  "lint-staged": {
    "**/*.json": "yarn format",
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint",
      "yarn format"
    ]
  }
}
